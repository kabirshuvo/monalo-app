generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("customer")
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  authorId  String
  createdAt DateTime @default(now())
}

model Product {
  id        String   @id @default(cuid())
  name      String
  price     Int
  createdAt DateTime @default(now())
}

model Course {
  id        String   @id @default(cuid())
  title     String
  description String?
  createdAt DateTime @default(now())
}

model Notification {
  id       String   @id @default(cuid())
  userId   String
  message  String
  sentAt   DateTime @default(now())
}

model AnalyticsEvent {
  id      String   @id @default(cuid())
  name    String
  payload String?
  createdAt DateTime @default(now())
}
